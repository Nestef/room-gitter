<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/room_list_avatar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_text_end"
        android:layout_marginTop="@dimen/list_item_text_vertical"

        android:gravity="center_vertical"
        android:textSize="@dimen/list_item_title"
        app:layout_constraintBottom_toTopOf="@+id/room_list_item_description"
        app:layout_constraintStart_toEndOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Title" />

    <TextView

        android:id="@+id/room_list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_text_vertical"
        android:layout_marginEnd="@dimen/list_item_text_end"
        android:gravity="start"
        android:maxLines="1"
        android:textSize="@dimen/list_item_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/room_list_item_title"
        tools:text="Subtitle" />

    <TextView
        android:id="@+id/room_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/list_item_text_vertical"
        app:layout_constraintBottom_toTopOf="@+id/room_list_item_description"
        app:layout_constraintStart_toEndOf="@+id/room_list_item_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="700" />

    <TextView
        android:id="@+id/room_item_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_text_end"
        android:layout_marginStart="@dimen/list_item_text_end"
        android:background="@color/colorAccent"
        android:text="89"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        tools:layout_editor_absoluteX="352dp" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="72dp" />


</android.support.constraint.ConstraintLayout>