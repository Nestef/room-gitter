<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/room_list_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/list_item_start_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_text_end"
        android:layout_marginStart="@dimen/list_item_text_start"
        android:layout_marginTop="@dimen/list_item_text_vertical"

        android:gravity="center_vertical"
        android:textSize="@dimen/list_item_title"
        app:layout_constraintBottom_toTopOf="@+id/room_list_item_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Title" />

    <TextView

        android:id="@+id/room_list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_text_vertical"
        android:layout_marginEnd="@dimen/list_item_text_end"
        android:layout_marginStart="@dimen/list_item_text_start"
        android:textSize="@dimen/list_item_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_list_item_title"
        tools:text="Subtitle" />

    <TextView
        android:id="@+id/room_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/list_item_text_vertical"
        android:text="700"
        app:layout_constraintBottom_toTopOf="@+id/room_list_item_description"
        app:layout_constraintStart_toEndOf="@+id/room_list_item_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_text_end"
        android:background="@color/colorAccent"
        android:text="89"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>