<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/room_list_avatar_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/room_list_item_title_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/list_item_text_end"
        android:layout_toEndOf="@id/room_list_avatar_widget"
        android:textSize="@dimen/list_item_title" />

    <TextView
        android:id="@+id/room_item_unread_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/list_item_text_end"
        android:layout_marginStart="@dimen/list_item_text_end"
        android:background="@color/colorAccent"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>